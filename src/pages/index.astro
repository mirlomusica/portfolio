---
import Layout from "../layouts/Layout.astro";
import cvData from "../../data/cv.json";
import profilePic from "../assets/profile-picture.JPG"
import { Image } from "astro:assets";
import Title from "../components/title.astro";
import Title2 from "../components/title2.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout
	title = "Jaume Estalella"
>
	<Title>{cvData.name}</Title>
	<Image
		src={profilePic}
		alt="imatge de perfil de l'Autor"
		width={500}
	/>

	<Title2>{cvData.title}</Title2>
	<p>{cvData.profile_summary}</p>

	<Title2>Projectes</Title2>
	<div id="projects">
	{cvData.projects.map(proj=>(
		<ProjectCard
			title={proj.name}
			img={proj.image}
			alt={proj.imgAlt}
			id={proj.id}
		/>
	))}
	</div>
</Layout>

<style>
	#projects{
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 50px;
	}
</style>